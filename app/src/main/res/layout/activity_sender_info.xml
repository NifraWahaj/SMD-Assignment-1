<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical"
        android:gravity="top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sender_details"
            android:background="@color/red"

            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingLeft="@dimen/padding_large"
            android:textSize="@dimen/textsize_XLlarge"
            android:fontFamily="sans-serif-medium"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="@dimen/tfWidth"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/padding_medium"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_large"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/tfWidth"
            android:layout_height="wrap_content"
            android:hint="@string/full_name"
            android:inputType="textPersonName"
            android:padding="@dimen/padding_medium"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            />

        <EditText
            android:id="@+id/contact_info"
            android:layout_width="@dimen/tfWidth"
            android:layout_height="wrap_content"
            android:hint="@string/contact_information"
            android:inputType="phone"
            android:padding="@dimen/padding_medium"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            />

        <EditText
            android:id="@+id/country"
            android:layout_width="@dimen/tfWidth"
            android:layout_height="wrap_content"
            android:hint="@string/country"
            android:inputType="text"
            android:padding="@dimen/padding_medium"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            />

        <EditText
            android:id="@+id/address"
            android:layout_width="@dimen/tfWidth"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:inputType="textPostalAddress"
            android:padding="@dimen/padding_medium"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            />


        <Button
            android:id="@+id/btnNextSender"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:text="@string/next"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_top_medium"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="sans-serif-medium"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

